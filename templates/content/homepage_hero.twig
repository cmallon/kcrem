<div class="relative homepage_hero">
    <div class="absolute inset-x-0 bottom-0 h-2/3 bg-gray-100"></div>
    <div class="">
        <div class="relative">
            <div class="absolute inset-0">
                {% if obj.image %}
                <img class="h-full w-full object-cover" src="{{ Image(obj.image) }}" alt="{{ obj.image.alt }}">
                {% endif %}
                
                <div class="absolute inset-0 bg-[#333435] opacity-[.40]"></div>
            </div>
            <div class="relative px-4 py-16 sm:px-6 sm:py-32 lg:py-48 lg:px-8 mx-auto container text-center kc-container flex items-center flex-col">
                <div class="w-2/3">
                    <h1 class="text-white">
                        {{ obj.header }}
                    </h1>
                    {% if obj.subheader %}
                    <h4 class="mt-6 text-white">
                        {{ obj.subheader }}
                    </h4>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
