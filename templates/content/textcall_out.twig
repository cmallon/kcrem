<div class="kc-container flex flex-col-reverse md:flex-row md:space-x-24">
    <div class="w-full md:w-2/3 flex flex-col space-y-8">
        {% if obj.header %}
            <h3>{{ obj.header }}</h3>
        {% endif %}
        {% if obj.text %}
        <div>
            {{ obj.text }}
        </div>
        {% endif %}
    </div>
    <div class="w-full md:w-1/3 mb-12 md:mb-0">
        <div class="rounded-[20px] bg-electric_blue px-8 py-12">
            <div class="text-white underline_me">
                {{ obj.call_out }}
            </div>
        </div>
    </div>
</div>
