<div class="kc-container flex flex-col space-y-16">
    {% for faq in obj.faq %}
        <div class="flex flex-row space-x-8 cursor-pointer group" x-data="{open: false}" @click="open = !open">
            <div class="h-8 w-8 flex flex-col justify-center items-center group-hover:stroke-[#A30C05] stroke-[#EC0E04]">
                <div x-show="!open"><svg xmlns="http://www.w3.org/2000/svg" fill="none" height="20" viewBox="0 0 20 20" width="20"><path d="m19 10h-18m9-9v18z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg></div>
                <div x-show="open" style="display: none"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="2" viewBox="0 0 20 2" fill="none"><path d="M19 1H1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></div>
            </div>
            <div class="flex flex-col space-y-8">
                <div>
                    <h4 class="text-navy font-bold">{{ faq.question }}</h4>
                </div>    
                <div x-show="open" x-transition style="display: none">
                    {{ faq.answer }}
                </div>    
            </div>
        </div>
    {% endfor %}
</div>
