<a href="{{ listing.guid }}" class="no_underline">
    <div class="flex flex-col space-y-8 overflow-hidden cursor-pointer {{ listing.custom.rental_type|sanitize }} listing">
        <div class="aspect-w-2 aspect-h-1 image">
            <img class="object-cover h-64 w-full bg-gray-100" src="{% for image in listing.meta("images") %}{% if loop.first %}{{ image.image.url }}{% endif %}{% endfor %}" alt="">
        </div>
        <div class="px-4 pb-8 text">
            <div class="text-lg leading-6 font-medium space-y-4">
                <p class="font-bold">{{ listing.custom.address }}</p>
                <p>${{ listing.custom.price }}/mo  {% if listing.custom.rental_type == 'Residential' and listing.custom.rooms > 0 %}| {{ listing.custom.rooms }} Bedroom(s) {% endif %}{% if listing.custom.square_footage %}|  {{ listing.custom.square_footage }} sq ft{% endif %}</p>
            </div>
        </div>
    </div>
</a>
